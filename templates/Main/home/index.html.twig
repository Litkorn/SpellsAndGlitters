{% extends 'base.html.twig' %}

{% block title %}Accueil | Spells and Glitters{% endblock %}

    {# TODO: Add link to creations page matching to category; add links to creations details #}

{% block body %}

    {# New creations section #}
    <section class="container text-center">
        <h1 class="my-5">Nouveautés</h1>
            <div class="row">
            {% for creation in creations %}
                <div class="col-lg-3 col-md-6 col-6 h-100 fadein mb-3 text-start">
                    <img class="card-img-top picture-home" src="{{ asset(dl_dir ~ creation.picture) }}" alt="{{creation.title}}" style="height: 300px; object-fit: cover;">
                    <div class="position-relative">
                        <span class="mt-2 fs-5 font-sawarabi p-md-0 pr-5">{{ creation.title }}</span>
                        <span class="position-absolute top-0 end-0">
                            {% if is_granted("ROLE_USER") %}
                                {% set isFavorite = false %}
                                {% for favorite in creation.favorites %}
                                    {% if favorite.id == app.user.id %}
                                        {% set isFavorite = true %}
                                    {% endif %}
                                {% endfor %}
                                {% if isFavorite %}
                                    <a href="{{ path('app_creations_remove_favorite', {id: creation.id}) }}"><i class="fa-solid fa-heart fa-lg" style="color: #ffa494"></i></a>
                                {% else %}
                                    <a href="{{ path('app_creations_add_favorite', {id: creation.id}) }}"><i class="fa-regular fa-heart fa-lg" style="color: #ffa494"></i></a>
                                {% endif %}
                            {% else %}
                                <a href="{{ path('app_login') }}"><i class="fa-regular fa-heart fa-lg mr-3" style="color: #ffa494"></i></a>
                            {% endif %}
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="btn btn-primary home-button text-secondary mt-4 mb-5" href="{# {{ path('app_news') }} #}">Tout voir</a>
        <hr>
    </section>

