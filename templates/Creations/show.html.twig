{% extends 'base.html.twig' %}

{% block title %} {{ creation.title }} | Spells and Glitters {% endblock %}

{% block body %}

	<section class="py-5">
			<div class="container px-4 px-lg-5 my-5">
					<div class="row align-items-center">
							<div class="col-md-6"><img class="card-img-top mb-5 mb-md-0 picture-creations" src="{{ asset(dl_dir ~ creation.picture) }}" alt="{{ creation.title}}" /></div>
							<div class="col-md-6 align-self-start">
									<div class="small mb-1">{{ creation.category }}</div>
									<h1 class="display-5 fw-bolder">{{ creation.title }}</h1>
									<div class="fs-5 mb-5">
									</div>
									<div class="lead">{{ creation.description|raw }}</div>
									<div class="d-flex">
										<span class="my-3">
												{# Verify if user is identified #}
												{% if app.user and is_granted("ROLE_USER") %}
														{% set isFavorite = false %}
														{% for favorite in creation.favorites %}
																{% if favorite.id == app.user.id %}
																{# if a creation's favorite's id == user's id, set isFavorite == true #}
																		{% set isFavorite = true %}
																{% endif %}
														{% endfor %}
														{# displays heart icon accordingly if isFavorite is true or false #}
														{% if isFavorite %}
																<a class="nav-link" href="{{ path('app_creations_remove_favorite', {id: creation.id}) }}"><i class="fa-solid fa-heart fa-lg mr-md-3" style="color: #ffa494"></i> Déjà en favoris!</a>
														{% else %}
																<a class="text-danger" href="{{ path('app_creations_add_favorite', {id: creation.id}) }}"><i class="fa-regular fa-heart fa-lg mr-md-3" style="color: #ffa494"></i> Ajouter aux favoris</a>
														{% endif %}
												{# diplays en empty heart if user isn't identified #}
												{% else %}
														<a href="{{ path('app_login') }}"><i class="fa-regular fa-heart fa-lg mr-md-3" style="color: #ffa494"></i> Ajouter aux favoris</a>
												{% endif %}
										</span>
									</div>
							</div>
					</div>
			</div>
	</section>

{% endblock %}
