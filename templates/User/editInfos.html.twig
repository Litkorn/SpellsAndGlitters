{% extends 'base.html.twig' %}

{% block title %}Modification du profil | Spells and Glitters{% endblock %}

{% block body %}
	<div class="container-fluid col-10 col-md-4 my-3">
			<h1 class="h3 mb-3 font-weight-normal text-center">Modifier mes informations personnelles</h1>

			<div>
			{{ form_errors(form) }}
					{{ form_start(form) }}
							{{ form_row(form.name) }}
							{{ form_row(form.lastName) }}
							{{ form_row(form.email) }}
							<hr class="my-5">
							{{ form_row(form.pass) }}
							{{ form_widget(form._token) }}
							<div class="row justify-content-around mt-5">
								<a href="{{ path('app_profil_informations', {id: user.id}) }}" class="col-5 btn btn-secondary d-block mx-auto">Annuler</a>
								<button type="submit" class="col-5 btn btn-primary text-secondary d-block mx-auto">Confirmer</button>
							</div>
					{{ form_end(form) }}
			</div>
	</div>
{% endblock %}
