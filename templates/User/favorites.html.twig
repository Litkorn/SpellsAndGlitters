{% extends 'base.html.twig' %}

{% block title %}Favoris | Spells and Glitters{% endblock %}

{% block body %}
<div class="container mt-10">
    <div class="row">
        {% include "_partials/_dashboard.html.twig" %}
        <div class="row col-md-7 col-10 mx-auto">
            <h1 class="h4">Mes favoris</h1>
            {% for favorite in favorites %}
                <div class="col-lg-4 col-md-6 col-6 fadein mb-5 text-start">
                    <a href="{{ path('app_creations_details', {slug: favorite.slug}) }}"><img class="picture-creations mx-auto d-block" src="{{ asset(dl_dir ~ favorite.picture) }}" alt="{{favorite.title}}"></a>
                    <div class="position-relative">
                        <a class="link-secondary link-underline-opacity-0 link-underline-opacity-75-hover" href="{{ path('app_creations_details', {slug: favorite.slug}) }}"><div class="title-creation font-sawarabi pr-5">{{ favorite.title }}</div></a>
                        <a class="link-secondary link-underline-opacity-0 link-underline-opacity-75-hover mx-auto" href="">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% endblock %}
